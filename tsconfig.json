{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"noImplicitAny": false,
		"sourceMap": true,
//	    "strictNullChecks": true,
		"experimentalDecorators": true,
		"baseUrl": "./",
		"noUnusedLocals": true,
        "checkJs": true,
        "lib":[
            "dom",
            "es5",
            "es6"
        ]
	},
    "types": [
        "react",
        "react-dom",
        "node"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.js",
        "./**/*.jsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
